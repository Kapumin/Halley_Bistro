<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HalleyBistro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myToastTheme">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stFont">@font/ubuntu_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">#323232</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">0.5dp</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stLength">SHORT</item>
        LONG or SHORT
        <item name="stGravity">center</item>
        top or center
        <item name="stRadius">16dp</item>
    </style>
</resources>